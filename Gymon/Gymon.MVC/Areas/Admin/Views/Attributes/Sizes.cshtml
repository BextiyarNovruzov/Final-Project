@{
}
@model List<Size>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sizes</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var size in Model)
        {
            <tr>
                <td>@size.Id</td>
                <td>@size.Name</td>
                <td>
                    <a asp-action="EditSize" asp-route-id="@size.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteSize" asp-route-id="@size.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateSize" class="btn btn-primary">Create New Size</a>
