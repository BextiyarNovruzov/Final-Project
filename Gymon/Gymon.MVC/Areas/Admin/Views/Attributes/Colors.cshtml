@using Gymon.Core.Entities.ProductAttributies
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Color>

@{
    ViewData["Title"] = "Colors";
}

<h2>Colors</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var color in Model)
        {
            <tr>
                <td>@color.Id</td>
                <td>@color.Name</td>
                <td>
                    <a asp-action="EditColor" asp-route-id="@color.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteColor" asp-route-id="@color.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateColor" class="btn btn-primary">Create New Color</a>
