@using Gymon.Core.Entities
@model List<SportType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Brand Buttons -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a asp-action="Create" asp-controller="SportType" class="m-0 font-weight-bold text-primary">Create</a>
    </div>
    <div class="card-body">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th colspan="2" scope="col">Actions</th>
                </tr>
            </thead>
            @{
                int counter = 1;
            }
            <tbody>
                @foreach (var item in Model ?? [])
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Delete" asp-controller="SportType" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                            <a asp-action="Update" asp-controller="SportType" asp-route-id="@item.Id" type="button" class="btn btn-warning">Update</a>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>